# Application Settings
APP_NAME=KCET College Predictor API
APP_DESCRIPTION=API for predicting college admission chances based on KCET ranks
APP_VERSION=2.0.0

DATABASE_URL=data/kcet_2024.db

# API Settings
DEFAULT_ROUND=1
MIN_ROUND=1
MAX_ROUND=3

# Email Configuration (Gmail SMTP)
EMAIL_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
SMTP_FROM_EMAIL=your_email@gmail.com
SMTP_FROM_NAME=KCET College Predictor

# Google OAuth (for Google-specific validation, optional since Supabase handles OAuth)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GEMINI_API_KEY=your-gemini-api-key

# Supabase Configuration
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your-anon-public-key
SUPABASE_SERVICE_KEY=your-service-role-key

# JWT Configuration
JWT_SECRET_KEY=generate-a-random-secret-key-at-least-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

DEBUG=true